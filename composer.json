{
  "name": "codeonweekends/mpesa-php-sdk",
  "description": "(Unofficial) PHP SDK for the MPesa payment gateway by Vodacom Mozambique",
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "Amandio Nhamande",
      "email": "amandio16@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "phpseclib/phpseclib": "^2.0",
    "guzzlehttp/guzzle": "~6.0",
    "illuminate/support": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "vlucas/phpdotenv": "^3.3"
  },
  "autoload": {
    "classmap": [
      "src"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "post-install-cmd": "php -r \"copy('phpunit.xml.example', 'phpunit.xml');\""
  }
}
