{
  "name": "codeonweekends/mpesa-php-sdk",
  "description": "(Unofficial) PHP SDK for the MPesa payment gateway by Vodacom Mozambique",
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "Amandio Nhamande",
      "email": "amandio16@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2 || ^8.0",
    "phpseclib/phpseclib": "^2.0",
    "guzzlehttp/guzzle": "~6.0",
    "illuminate/support": "*",
    "ext-json": "*",
    "ext-openssl": "*"
  },
  "autoload": {
    "psr-4": {
      "CodeonWeekends\\MPesa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
